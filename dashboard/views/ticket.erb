<% @title = "Ticket ##{@ticket[:id]} - Ticket Agent" %>

<div class="mb-4">
  <a href="/bounties" class="text-decoration-none">â† Bounties</a>
</div>

<div class="card">
  <div class="card-body">
    <div class="d-flex justify-content-between align-items-start mb-3">
      <div>
        <span class="badge bg-secondary me-2">#<%= @ticket[:id] %></span>
        <span class="badge bg-info"><%= @ticket[:type] %></span>
      </div>
      <span class="text-success fw-bold fs-5"><%= number_with_delimiter(@ticket[:bounty]) %> pts</span>
    </div>
    <h2 class="card-title"><%= @ticket[:title] %></h2>
    <p class="card-text text-muted"><%= @ticket[:description] %></p>
    <p class="text-muted small mb-0">This is test data. Once the Ticket Agent backend is wired, real issue data and score breakdown will appear here.</p>
  </div>
</div>
